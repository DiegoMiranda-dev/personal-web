---
import Bitem from './Bitem.astro';
import ansiedad from '../pages/ansiedad.astro';
import depresion from '../pages/depresion.astro';
import tdah from '../pages/tdah.astro';
import anobuli from '../pages/anobuli.astro'

---
<div class="grid grid-cols-4 auto-rows-[12rem] gap-6">
    <Bitem  class="col-span-6 md:col-span-2 flex justify-center items-center bg-gradient-to-r from-slate-100 to-white hover:from-white hover:to-slate-100  " title="Ansiedad" url='ansiedad' />
    <Bitem class="col-span-6 md:col-span-2 flex justify-center items-center bg-gradient-to-r from-slate-100 to-white hover:from-white hover:to-slate-100"title="Depresión" url='depresion'/>
    <Bitem class="col-span-6 md:col-span-2 flex justify-center items-center text-center bg-gradient-to-r from-slate-100 to-white hover:from-white hover:to-slate-100"title="Transtorno por déficit de atención e hiperactividad (TDAH)" url='tdah'/>
    <Bitem class="col-span-6 md:col-span-2 flex justify-center items-center bg-gradient-to-r from-slate-100 to-white hover:from-white hover:to-slate-100"title="Anorexia y Bulimia" url='anobuli'/>
</div> 